{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Search Engine (debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/search_engine.py",
            "args": [
                "Chicken Breast",
                "--limit",
                "2"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Search Engine (run)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/search_engine.py",
            "args": [
                "${input:searchQuery}",
                "--limit",
                "${input:searchLimit}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "noDebug": true
        }
    ],
    "inputs": [
        {
            "id": "searchQuery",
            "type": "promptString",
            "description": "Search query",
            "default": "Chicken Breast"
        },
        {
            "id": "searchLimit",
            "type": "promptString",
            "description": "Result limit",
            "default": "2"
        }
    ]
}
